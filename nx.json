{
  "extends": "nx/presets/npm.json",
  "tasksRunnerOptions": {
    "default": {
      "options": {
        "cacheableOperations": [
          "generate-sources",
          "build",
          "dev",
          "preview",
          "deploy"
        ]
      }
    }
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["generate-sources", "^build"]
    },
    "docker": {
      "dependsOn": ["build"]
    },
    "test": {
      "inputs": ["default", "^default", "{workspaceRoot}/jest.preset.js"]
    },
    "lint": {
      "inputs": ["default", "{workspaceRoot}/.eslintrc.json"]
    }
  },
  "workspaceLayout": {
    "appsDir": "packages",
    "libsDir": "packages"
  },
  "affected": {
    "defaultBase": "main"
  },
  "defaultProject": "@crate/web",
  "cli": {
    "defaultCollection": "@nxext/vite"
  },
  "generators": {
    "@nxext/vite": {
      "application": {
        "linter": "eslint"
      },
      "library": {
        "linter": "eslint"
      }
    }
  },
  "$schema": "./node_modules/nx/schemas/nx-schema.json"
}
