{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ESNext",
    "sourceMap": true,
    "importHelpers": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "lib": ["es2019"],
    "declaration": true,
    "resolveJsonModule": true,
    "paths": {
      "@crate/common": ["libs/shared/common/src/index.ts"],
      "@crate/content/*": ["docs/content/src/*"],
      "@crate/files-client": ["libs/server/files-client/src/index.ts"],
      "@crate/types": ["libs/shared/types/src/index.ts"],
      "@crate/user-client": ["libs/server/user-client/src/index.ts"],
      "@crate/web/*": ["apps/web/src/*"]
    }
  },
  "include": [],
  "exclude": ["node_modules", "*/**/*.test.ts", "*/**/*.spec.ts"]
}
