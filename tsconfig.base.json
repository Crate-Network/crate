{
  "compilerOptions": {
    "target": "es6",
    "sourceMap": true,
    "importHelpers": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "types": [
      "node",
      "jest"
    ],
    "lib": [
      "es2019"
    ],
    "declaration": true,
    "resolveJsonModule": true,
    "paths": {
      "@/api-lib": [
        "packages/api-lib/src/index.ts"
      ]
    }
  }
}
