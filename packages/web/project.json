{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "@crate/web",
  "sourceRoot": "packages/web/src",
  "projectType": "application",
  "targets": {
    "docker": {
      "executor": "@nx-tools/nx-docker:build",
      "options": {
        "push": true,
        "platforms": ["linux/amd64", "linux/arm64"],
        "metadata": {
          "images": ["ghcr.io/crate-network/web"],
          "context": "packages/web",
          "tags": [
            "latest",
            "type=schedule",
            "type=ref,event=branch",
            "type=ref,event=tag",
            "type=ref,event=pr",
            "type=semver,pattern={{version}}",
            "type=semver,pattern={{major}}.{{minor}}",
            "type=semver,pattern={{major}}",
            "type=sha"
          ]
        }
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "conventional"
      }
    },
    "build": {
      "executor": "@nxext/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/packages/web",
        "baseHref": "/",
        "configFile": "packages/web/vite.config.ts"
      }
    },
    "serve": {
      "executor": "@nxext/vite:dev",
      "options": {
        "outputPath": "dist/packages/web",
        "baseHref": "/",
        "configFile": "packages/web/vite.config.ts"
      },
      "dependsOn": ["@crate/server"],
      "configurations": {
        "production": {
          "fileReplacements": [
            {
              "replace": "packages/web/src/environments/environment.ts",
              "with": "packages/web/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/web/**/*.{ts,js,tsx,jsx}"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/web"],
      "options": {
        "jestConfig": "packages/web/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": [],
  "implicitDependencies": ["@crate/server", "@crate/content"]
}
