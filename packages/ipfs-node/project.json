{
  "name": "@crate/ipfs",
  "sourceRoot": "packages/ipfs-node/",
  "projectType": "application",
  "targets": {
    "docker": {
      "executor": "@nx-tools/nx-docker:build",
      "options": {
        "push": true,
        "platforms": ["linux/amd64", "linux/arm64"],
        "context": "packages/ipfs-node",
        "metadata": {
          "images": ["ghcr.io/crate-network/ipfs"],
          "tags": [
            "latest",
            "type=schedule",
            "type=ref,event=tag",
            "type=ref,event=pr",
            "type=semver,pattern={{version}}",
            "type=semver,pattern={{major}}.{{minor}}",
            "type=semver,pattern={{major}}",
            "type=sha"
          ]
        }
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "kubectl port-forward pods/ipfs-ipfs-ipfs-cluster-0 4001:4001 5001:5001 8080:8080",
        "color": true,
        "cwd": "packages/ipfs-node"
      },
      "configurations": {
        "local": {
          "command": "docker compose up --build",
          "readyWhen": "Daemon is"
        }
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "conventional"
      }
    }
  }
}
