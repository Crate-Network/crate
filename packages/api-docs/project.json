{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "name": "@crate/api-docs",
  "sourceRoot": "packages/api-docs/src",
  "projectType": "library",
  "targets": {
    "generate-sources": {
      "executor": "@trumbitta/nx-plugin-openapi:generate-api-lib-sources",
      "options": {
        "useDockerBuild": true,
        "generator": "html",
        "sourceSpecPathOrUrl": "packages/api-spec/src/crate-spec.openapi.yml",
        "additionalProperties": "",
        "globalProperties": ""
      }
    },
    "docker": {
      "executor": "@nx-tools/nx-docker:build",
      "options": {
        "push": true,
        "platforms": ["linux/amd64", "linux/arm64"],
        "metadata": {
          "images": ["ghcr.io/crate-network/api-docs"],
          "context": "./packages/api-docs",
          "tags": [
            "latest",
            "type=schedule",
            "type=ref,event=branch",
            "type=ref,event=tag",
            "type=ref,event=pr",
            "type=semver,pattern={{version}}",
            "type=semver,pattern={{major}}.{{minor}}",
            "type=semver,pattern={{major}}",
            "type=sha"
          ]
        }
      }
    }
  },
  "implicitDependencies": ["@crate/api-spec"],
  "tags": []
}
